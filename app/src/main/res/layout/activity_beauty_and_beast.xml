<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BeautyAndBeastActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline30Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.30"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline57Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.57"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline73Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.73"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/beautyAndBeastBanner"
        android:layout_width="@dimen/space_0"
        android:layout_height="@dimen/space_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline30Horizontal"
        android:src="@mipmap/beauty_and_beast_banner"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/beautyAndBeastCover"
        android:layout_width="125dp"
        android:layout_height="175dp"
        android:src="@mipmap/beauty_and_beast_cover"
        android:scaleType="centerCrop"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:id="@+id/tvBeautyAndBeastCover"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Beauty and the Beast"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline30Horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.6" />

    <ImageView
        android:id="@+id/ivFavoriteBtn"
        android:layout_width="35dp"
        android:layout_height="@dimen/space_50"
        android:src="@mipmap/ic_launcher"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline30Horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1" />

    <TextView
        android:id="@+id/dateTimeBeautyAndBeast"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="March 2017 PG 129 minutes"
        android:textSize="14sp"
        android:textColor="@color/grey"
        android:layout_marginStart="60dp"
        android:layout_marginTop="85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline30Horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.6" />

    <Button
        android:id="@+id/btnRentFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightRed"
        android:text="RENT FROM R29,99"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline30Horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.1" />

    <Button
        android:id="@+id/btnBuyFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightRed"
        android:text="BUY FROM R127,99"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline30Horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.9" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/lightGrey"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline57Horizontal" />

    <ImageView
        android:id="@+id/ivRatings"
        android:layout_width="@dimen/space_50"
        android:layout_height="@dimen/space_50"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline73Horizontal"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="242 ratings"
        android:textColor="@color/lightBlack"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline73Horizontal"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.15" />

    <ImageView
        android:id="@+id/ivFamily"
        android:layout_width="@dimen/space_50"
        android:layout_height="@dimen/space_50"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline73Horizontal"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.40" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family"
        android:textColor="@color/lightBlack"
        android:layout_marginEnd="62dp"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline73Horizontal"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.45" />

    <ImageView
        android:id="@+id/ivFruit"
        android:layout_width="@dimen/space_50"
        android:layout_height="@dimen/space_50"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline73Horizontal"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.65" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="71%"
        android:textColor="@color/lightBlack"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline73Horizontal"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.65" />

    <ImageView
        android:id="@+id/ivSimilar"
        android:layout_width="@dimen/space_50"
        android:layout_height="@dimen/space_50"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline73Horizontal"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.90" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Similar"
        android:textColor="@color/lightBlack"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline57Horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline73Horizontal"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.90" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/lightGrey"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline73Horizontal" />

    <TextView
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:text="The story and characters you know and love come to spectacular life in the live-action adaption of Disney's animated classic Beauty and the Beast."
        android:textSize="22sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline73Horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>